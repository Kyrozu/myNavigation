<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_utama"

    app:startDestination="@id/homeFragment">
    <!-- fragment pertama dilihat -->

    <fragment
        android:id="@+id/detailProfileFragment"
        android:name="ky.paba.mynavigation.DetailProfileFragment"
        android:label="Detail"
        tools:layout="@layout/fragment_detail_profile" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="ky.paba.mynavigation.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="ky.paba.mynavigation.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_detailProfileFragment"
            app:destination="@id/detailProfileFragment"
            app:enterAnim="@android:anim/fade_in" />
    </fragment>
    <fragment
        android:id="@+id/settingFragment"
        android:name="ky.paba.mynavigation.SettingFragment"
        android:label="Setting"
        tools:layout="@layout/fragment_setting" />
    <fragment
        android:id="@+id/bahanFragment"
        android:name="ky.paba.mynavigation.BahanFragment"
        android:label="bahan"
        tools:layout="@layout/fragment_bahan" />
    <fragment
        android:id="@+id/cartFragment"
        android:name="ky.paba.mynavigation.CartFragment"
        android:label="cart"
        tools:layout="@layout/fragment_cart" />
</navigation>